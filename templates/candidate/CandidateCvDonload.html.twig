{% extends "candidate/base-pdf.html.twig" %}
{% block title %}
	Curriculum Vitae de
	{{ candidate.nom }}
	{{ candidate.prenom }}
{% endblock %}
{% block body %}
	<div class="container">
    <-- Etat Civil -->
		<div class="row">
			<div class="col-9">
				<h2>{{candidate.prenom}}
					{{candidate.nom}}</h2>
				<h3 class="poste">{{candidate.Poste}}</h3>
        <p>{{candidate.Apropos}}</p>              				
			</div>
			<div class="col-3">
			  <img src="{{ app.request.getSchemeAndHttpHost() }}/images/candidats/{{ candidate.Avatar }}" alt="avatar" width="140px" height="150px">
			</div>
		</div>
    <-- Educations -->
    <div class="row">
      <div class="col-12">
        <h3 class="timeline-titre">Educations: </h3>
      </div>
    </div>
    <div class="row">
			<div class="col-12">
        <div class="timeline">
          {% for Education in Educations %}
            <div class="timeline-items">
              <h4 class="items-titre">{{ Education.titre }}<span class="date">{{ Education.DateDeDebut |date('d/m/Y') }}
											-
											{{ Education.DateDeFin |date('d/m/Y') }}</span>
									</h4>
									<strong>{{ Education.NomEcole }}</strong>
									<p>{{ Education.Description }}</p>            
            </div>
          {% endfor %}               
        </div>
			</div>			  
		</div>
    <-- Educations -->
    <div class="row">
      <div class="col-12">
        <h3 class="timeline-titre">Experiences: </h3>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <div class="timeline">
          {% for Experience in Experiences %}
            <div class="timeline-items">
              <h4 class="items-titre">{{ Experience.Titre }}<span class="date">{{ Experience.DateDebut |date('d/m/Y') }}
											-
											{{ Experience.DateFin |date('d/m/Y') }}</span>
									</h4>
									<strong>{{ Experience.NomDeSociete }}</strong>
									<p>{{ Experience.Description }}</p>            
            </div>
          {% endfor %}               
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <h3 class="timeline-titre">Formations: </h3>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <div class="timeline">
          {% for Formation in Formations %}
            <div class="timeline-items">
              <h4 class="items-titre">{{ Formation.Formation }}<span class="date">{{ Formation.DateDebut |date('d/m/Y') }}
											-
											{{ Formation.DateFin |date('d/m/Y') }}</span>
									</h4>
									<strong>{{ Formation.Etablissement }}</strong>
									<p>{{ Formation.Descirption }}</p>            
            </div>
          {% endfor %}               
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <h3 class="timeline-titre">Langues: </h3>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <div class="timeline">
          {% for Langue in Langues %}
            <div class="timeline-items">
              <h4 class="items-titre">{{Langue.Langue }}:</h4>									
									<p>{{ Langue.Niveau }}</p>            
            </div>
          {% endfor %}               
        </div>
      </div>
    </div>
	</div>		
